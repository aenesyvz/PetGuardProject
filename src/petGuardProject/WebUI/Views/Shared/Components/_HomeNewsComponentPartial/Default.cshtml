<script>
    document.addEventListener('DOMContentLoaded', function () {
        const circles = document.querySelectorAll('.circle');
        let activeIndex = 0;

        function updateCircles() {
            circles.forEach((circle, index) => {
                circle.classList.toggle('active', index === activeIndex);
            });
        }

        document.querySelector('.arrow-next').addEventListener('click', function () {
            activeIndex = (activeIndex + 1) % circles.length;
            updateCircles();
        });

        document.querySelector('.arrow-back').addEventListener('click', function () {
            activeIndex = (activeIndex - 1 + circles.length) % circles.length;
            updateCircles();
        });

        updateCircles();
    });
</script>